{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
